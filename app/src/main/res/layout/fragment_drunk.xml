<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:uber="http://schemas.android.com/apk/res-auto"
    xmlns:lyft="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrunkFragment">


    <Button
        android:id="@+id/report911"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Incident: Call 911"
        app:layout_constraintBottom_toTopOf="@+id/rideRequestButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.lyft.lyftbutton.LyftButton
        android:id="@+id/lyft_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        lyft:lyftStyle="lyftMulberryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rideRequestButton" />
    <!--        lyft:lyftStyle="lyftMulberryDark" -->

    <com.uber.sdk.android.rides.RideRequestButton
        android:id="@+id/rideRequestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        uber:ub__style="black"
        app:layout_constraintBottom_toTopOf="@+id/lyft_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report911" />
    <!--       uber:ub__style="black" -->

</android.support.constraint.ConstraintLayout>